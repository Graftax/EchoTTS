{
	"$schema": "https://json.schemastore.org/tsconfig",

	"_version": "18.2.0",

	"compilerOptions": {
		"lib": ["es2022"],
    "module": "node16",
    "target": "es2022",

		"strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",

		"allowSyntheticDefaultImports": true,
		"composite": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"sourceMap": true,
		"tsBuildInfoFile": "./dist/.tsbuildinfo"
	},
	"include": ["src/**/*"]
}